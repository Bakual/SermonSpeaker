<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="sh404sefextplugins" method="upgrade">
	<name>sh404sef - SermonSpeaker component support plugin</name>
	<author>Thomas Hunziker</author>
	<creationDate>2013-10-03</creationDate>
	<copyright>2013 Thomas Hunziker</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>admin@sermonspeaker.net</authorEmail>
	<authorUrl>www.sermonspeaker.net</authorUrl>
	<version>1.0</version>
	<description>Provide default support for sef urls and meta data</description>
	<files>
		<filename plugin="com_sermonspeaker">com_sermonspeaker.php</filename>
		<folder plugin="com_sermonspeaker">sermonspeaker</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="sermons" type="text"
					default="sermons"
					label="Sermons List"
					description="Change viewname for sermon" />
				<field name="sermon" type="text"
					default="sermon"
					label="Sermon Detail"
					description="Change viewname for sermon" />
				<field name="speakers" type="text"
					default="speakers"
					label="Speakers List"
					description="Change viewname for speakers list" />
				<field name="speaker" type="text"
					default="speaker"
					label="Speaker Detail"
					description="Change viewname for speaker detail" />
				<field name="series" type="text"
					default="series"
					label="Series List"
					description="Change viewname for series list" />
				<field name="serie" type="text"
					default="serie"
					label="Series Detail"
					description="Change viewname for series detail" />
			</fieldset>
		</fields>
	</config>

</extension>
