<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="upgrade">
	<name>Sermoncast</name>
	<author>Martin Hess</author>
	<creationDate>Maerz 2010</creationDate>
	<copyright>(C) 2008 - 2009</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>martin.zh@gmail.com</authorEmail>
	<authorUrl>http://joomlacode.org/gf/project/sermon_speaker/</authorUrl>
	<version>3.4</version>
	<description>This module provides podcasting functionality for SermonSpeaker. It is based on the mod_podcast module from Joseph LeBlanc.</description>
	<files>
		<filename module="mod_sermoncast">mod_sermoncast.php</filename>
		<filename>podcast-mini.gif</filename>
		<filename>feed_rss.gif</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB.mod_sermoncast.ini</language>
		<language tag="de-DE">de-DE.mod_sermoncast.ini</language>
	</languages>
	<params addpath="/administrator/components/com_content/elements">
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="introtext" type="text" default="" label="INTROTEXT" description="INTROTEXT_DESC" />
		<param type="spacer" />
		<param name="series_cat" type="category" section="com_sermonspeaker" label="SERIES_CATEGORY" description="CATEGORY_DESC" />
		<param name="speaker_cat" type="category" section="com_sermonspeaker" label="SPEAKER_CATEGORY" description="CATEGORY_DESC" />
		<param name="sermon_cat" type="category" section="com_sermonspeaker" label="SERMON_CATEGORY" description="CATEGORY_DESC" />
		<param type="spacer" />
		<param name="showpcast" type="radio" default="1" label="SHOWPCAST" description="SHOWPCAST_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="pcast_prefix" type="list" default="itpc" label="PCAST_PREFIX" description="PCAST_PREFIX_DESC">
			<option value="http://">http://</option>
			<option value="itpc://">itpc://</option>
			<option value="pcast://">pcast://</option>
		</param>
		<param name="otherlink" type="text" default="" label="OTHERLINK" description="OTHERLINK_DESC" />
		<param name="otherimage" type="text" default="" label="OTHERIMAGE" description="OTHERIMAGE_DESC" />
		<param type="spacer" />
		<param name="showplink" type="radio" default="1" label="SHOWPLINK" description="SHOWPLINK_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param type="spacer" />
		<param name="showhelp" type="radio" default="0" label="SHOWHELP" description="SHOWHELP_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="helpwidth" type="text" default="700" label="HELPWIDTH" description="HELPWIDTH_DESC" />
		<param name="helpheight" type="text" default="500" label="HELPHEIGHT" description="HELPHEIGHT_DESC" />
		<param name="helpcontent" type="article" default="0" label="HELPCONTENT" description="HELPCONTENT_DESC" />
	</params>
</install>
