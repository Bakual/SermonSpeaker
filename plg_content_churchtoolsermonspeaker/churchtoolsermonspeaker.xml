<?xml version="1.0" encoding="utf-8"?>
<extension version="3.4.0" type="plugin" group="content" method="upgrade">
	<name>plg_content_churchtoolsermonspeaker</name>
	<author>Thomas Hunziker</author>
	<creationDate>2015-04-13</creationDate>
	<copyright>(C) 2015</copyright>
	<license>http://www.gnu.org/licenses/gpl.html</license>
	<authorEmail>admin@sermonspeaker.net</authorEmail>
	<authorUrl>http://www.sermonspeaker.net</authorUrl>
	<version>1.0.0</version>
	<description>PLG_CONTENT_CHURCHTOOLSERMONSPEAKER_XML_DESCRIPTION</description>
	<files>
		<filename plugin="churchtoolsermonspeaker">churchtoolsermonspeaker.php</filename>
		<folder>language</folder>
	</files>
	<updateservers>
		<server type="extension" priority="1" name="SermonSpeaker.net">http://www.sermonspeaker.net/update/plg_sermonspeaker_churchtoolsermonspeaker.xml</server>
	</updateservers>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="db_type"
					type="list"
					default="mysqli"
					>
					<option value="mysql">mysql</option>
					<option value="mysqli">mysqli</option>
				</field>

				<field
					name="db_host"
					type="text"
					default="localhost"
					/>

				<field
					name="db_database"
					type="text"
					/>

				<field
					name="db_user"
					type="text"
					/>

				<field
					name="db_pass"
					type="text"
					/>

				<field
					name="eventgroups"
					type="text"
					/>

				<field
					name="team_id"
					type="text"
					/>
			</fieldset>
		</fields>
	</config>
</extension>
