<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="general"
		addfieldpath="/administrator/components/com_categories/models/fields" >
		<field name="sermon_title" type="text"
			label="JGLOBAL_TITLE" description="COM_SERMONSPEAKER_FIELD_TITLE_DESC"
			onchange="check(this.value, 70, 0)"
			class="inputbox input-xlarge"
			size="30"
			required="true" />

		<field name="alias" type="text"
			label="JFIELD_ALIAS_LABEL" description="JFIELD_ALIAS_DESC"
			class="inputbox"
			size="45" />

		<field name="catid" type="categoryedit"
			label="JCATEGORY" description="JFIELD_CATEGORY_DESC"
			extension="com_sermonspeaker"
			class="inputbox"
			required="true" />

		<field name="state" type="list"
			label="JSTATUS" description="JFIELD_PUBLISHED_DESC"
			class="inputbox span12 small"
			filter="intval"
			size="1"
			default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASH</option>
		</field>

		<field name="podcast" type="list"
			label="COM_SERMONSPEAKER_FIELD_SERMONCAST_LABEL" description="COM_SERMONSPEAKER_FIELD_SERMONCAST_DESC"
			class="inputbox span12 small"
			size="1"
			default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="ordering" type="sermonordering" class="inputbox"
			table="sermon_sermons" field="sermon_title"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC" />

		<field name="audiofile" type="customfilelist" class="inputbox"
			path="path" 
			filter="\.aac$|\.m4a$|\.mp3$|\.wma$"
			hide_default="true"
			onchange="toggleElement('audiofile', 1);"
			label="COM_SERMONSPEAKER_FIELD_AUDIOFILE_LABEL"
			description="COM_SERMONSPEAKER_FIELD_AUDIOFILE_DESC" />

		<field name="videofile" type="customfilelist" class="inputbox"
			path="path" 
			filter="\.mp4$|\.mov$|\.f4v$|\.3gp$|\.3g2$|\.wmv$|\.flv$"
			hide_default="true"
			onchange="toggleElement('videofile', 1);"
			label="COM_SERMONSPEAKER_FIELD_VIDEOFILE_LABEL"
			description="COM_SERMONSPEAKER_FIELD_VIDEOFILE_DESC" />

		<field name="notes" type="editor"
			label="COM_SERMONSPEAKER_FIELD_NOTES_LABEL" description="COM_SERMONSPEAKER_FIELD_NOTES_DESC" 
			buttons="true"
			hide="pagebreak,readmore"
			class="inputbox"
			filter="JComponentHelper::filterText" />

		<field name="addfile" type="customfilelist" class="inputbox"
			path="path_addfile" 
			filter="\.png$|\.gif$|\.jpg$|\.bmp$|\.pdf$|\.txt$|\.doc$|\.docx$|\.ppt$|\.pptx$"
			hide_default="true"
			onchange="toggleElement('addfile', 1);"
			label="COM_SERMONSPEAKER_FIELD_ADDFILE_LABEL"
			description="COM_SERMONSPEAKER_FIELD_ADDFILE_DESC" />

		<field name="addfileDesc" type="text" class="inputbox"
			size="50" label="COM_SERMONSPEAKER_FIELD_ADDFILEDESC_LABEL"
			description="COM_SERMONSPEAKER_FIELD_ADDFILEDESC_DESC" />

		<field name="language" type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL" description="COM_SERMONSPEAKER_FIELD_LANGUAGE_DESC"
			class="inputbox span12 small"
		>
			<option value="*">JALL</option>
		</field>

	</fieldset>

	<fieldset name="info">
		<field name="id"  type="text"
			label="JGLOBAL_FIELD_ID_LABEL" description ="JGLOBAL_FIELD_ID_DESC"
			class="readonly"
			size="10" default="0"
			readonly="true" />

		<field name="created_by" type="user"
			label="JGLOBAL_FIELD_CREATED_BY_LABEL" description="JGLOBAL_FIELD_CREATED_BY_DESC" />

		<field name="created" type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL" description="JGLOBAL_FIELD_CREATED_DESC"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
			class="inputbox"
			size="22" />

		<field name="modified_by" type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset" />

		<field name="modified" type="calendar"
			label="JGLOBAL_FIELD_MODIFIED_LABEL" description="COM_SERMONSPEAKER_FIELD_MODIFIED_DESC"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
			class="readonly"
			readonly="true"
			size="22" />

		<field name="hits" type="hits" class="readonly"
			label="JGLOBAL_HITS" description="COM_SERMONSPEAKER_FIELD_HITS_DESC" />

	</fieldset>

	<fieldset name="detail" label="COM_SERMONSPEAKER_DETAIL" >
		<field name="sermon_number"  type="text" class="inputbox"
			label="COM_SERMONSPEAKER_FIELD_NUM_LABEL" description ="COM_SERMONSPEAKER_FIELD_NUM_DESC"
			size="5" />

		<field name="sermon_date" type="calendar"
			label="COM_SERMONSPEAKER_FIELD_DATE_LABEL" description="COM_SERMONSPEAKER_FIELD_DATE_DESC"
			class="inputbox"
			size="25"
			onchange="changedate(jform_sermon_date.value)"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>

		<field name="sermon_time"  type="text" class="inputbox"
			label="COM_SERMONSPEAKER_FIELD_LENGTH_LABEL" description ="COM_SERMONSPEAKER_FIELD_LENGTH_DESC"
			size="10" default="00:00:00" />

		<field name="scripture"  type="scripture" class="inputbox"
			label="COM_SERMONSPEAKER_FIELD_SCRIPTURE_LABEL" description ="COM_SERMONSPEAKER_FIELD_SCRIPTURE_DESC"
			size="30"
			readonly="true"
		/>

		<field name="speaker_id" type="speakerlist" class="inputbox"
			label="COM_SERMONSPEAKER_SPEAKER" description="COM_SERMONSPEAKER_FIELD_SPEAKER_DESC" />

		<field name="series_id" type="serieslist" class="inputbox"
			label="COM_SERMONSPEAKER_SERIE" description="COM_SERMONSPEAKER_FIELD_SERIE_DESC" />

		<field name="picture" type="mediawrapper" class="inputbox"
			label="COM_SERMONSPEAKER_FIELD_PICTURE_LABEL"
			description="COM_SERMONSPEAKER_FIELD_PICTURE_DESC" />

	</fieldset>

	<fieldset name="custom" label="COM_SERMONSPEAKER_FIELDSET_CUSTOM_LABEL">
		<field name="custom1"  type="text" class="inputbox"
			label="COM_SERMONSPEAKER_FIELD_CUSTOM1_LABEL" description ="COM_SERMONSPEAKER_FIELD_CUSTOM1_DESC"
			size="50" />

		<field name="custom2"  type="text" class="inputbox"
			label="COM_SERMONSPEAKER_FIELD_CUSTOM2_LABEL" description ="COM_SERMONSPEAKER_FIELD_CUSTOM2_DESC"
			size="50" />

	</fieldset>

	<fieldset name="metadata" label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
		<field name="metadesc" type="textarea"
			label="JFIELD_META_DESCRIPTION_LABEL" description="JFIELD_META_DESCRIPTION_DESC"
			onchange="check(this.value, 160, 0)"
			class="inputbox" rows="3" cols="30" />

		<field name="metakey" type="textarea"
			label="JFIELD_META_KEYWORDS_LABEL" description="JFIELD_META_KEYWORDS_DESC"
			onchange="check(this.value, 10, 1)"
			class="inputbox" rows="3" cols="30" />

		<field name="tags" type="tagslist"
			label="COM_SERMONSPEAKER_FIELD_TAGS_LABEL" description="COM_SERMONSPEAKER_FIELD_TAGS_DESC"
			class="inputbox"
			multiple="true"
			size="5" />
	</fieldset>
</form>
