<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_SERMONSPEAKER_ARCHIVE_VIEW_DEFAULT_TITLE">
		<message><![CDATA[COM_SERMONSPEAKER_ARCHIVE_VIEW_DEFAULT_DESC]]></message>
	</layout>

	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request">
			<field name="month" type="sql" 
				label="COM_SERMONSPEAKER_PARAM_SELECT_MONTH" 
				description="COM_SERMONSPEAKER_PARAM_SELECT_MONTH_DESC" 
				query="SELECT DISTINCT MONTH(sermon_date) as month FROM #__sermon_sermons ORDER BY month ASC" 
				key_field="month" 
				value_field="month" >
				<option value="0">-</option>
			</field>

			<field name="year" type="sql" 
				label="COM_SERMONSPEAKER_PARAM_SELECT_YEAR" 
				description="COM_SERMONSPEAKER_PARAM_SELECT_YEAR_DESC" 
				query="SELECT DISTINCT YEAR(sermon_date) as year FROM #__sermon_sermons ORDER BY year ASC" 
				key_field="year" 
				value_field="year" 
			/>
		</fieldset>
	</fields>

	<!-- Add fields to the parameters object for the layout. -->
	<fields name="params">
		<fieldset name="basic" label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS">
			<field name="series_cat" type="category" 
				label="COM_SERMONSPEAKER_PARAM_CATEGORY_SERIES_LABEL" 
				description="COM_SERMONSPEAKER_PARAM_CATEGORY_DESC" 
				extension="com_sermonspeaker" 
				show_root="true"
			/>

			<field name="speaker_cat" type="category" 
				label="COM_SERMONSPEAKER_PARAM_CATEGORY_SPEAKER_LABEL" 
				description="COM_SERMONSPEAKER_PARAM_CATEGORY_DESC" 
				extension="com_sermonspeaker" 
				show_root="true"
			/>

			<field name="sermon_cat" type="category" 
				label="COM_SERMONSPEAKER_PARAM_CATEGORY_SERMON_LABEL" 
				description="COM_SERMONSPEAKER_PARAM_CATEGORY_DESC" 
				extension="com_sermonspeaker" 
				show_root="true"
			/>
		</fieldset>
	</fields>
</metadata>