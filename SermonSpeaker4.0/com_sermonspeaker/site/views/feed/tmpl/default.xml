<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_SERMONSPEAKER_FEED_VIEW_DEFAULT_TITLE">
		<message><![CDATA[COM_SERMONSPEAKER_FEED_VIEW_DEFAULT_DESC]]></message>
	</layout>

	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request">

			<field name="series_cat" type="category" 
				label="COM_SERMONSPEAKER_FIELD_CATEGORY_SERIES_LABEL" 
				description="COM_SERMONSPEAKER_FIELD_CATEGORY_DESC" 
				extension="com_sermonspeaker" 
				show_root="true"
			/>

			<field name="speaker_cat" type="category" 
				label="COM_SERMONSPEAKER_FIELD_CATEGORY_SPEAKER_LABEL" 
				description="COM_SERMONSPEAKER_FIELD_CATEGORY_DESC" 
				extension="com_sermonspeaker" 
				show_root="true"
			/>

			<field name="sermon_cat" type="category" 
				label="COM_SERMONSPEAKER_FIELD_CATEGORY_SERMON_LABEL" 
				description="COM_SERMONSPEAKER_FIELD_CATEGORY_DESC" 
				extension="com_sermonspeaker" 
				show_root="true"
			/>

			<field name="series_id" type="sql" 
				label="COM_SERMONSPEAKER_PARAM_SERIES" 
				description="COM_SERMONSPEAKER_PARAM_SERIES_DESC"
				query="SELECT id, series_title FROM #__sermon_series" 
				key_field="id" 
				value_field="series_title" >
				<option value="0">COM_SERMONSPEAKER_PARAM_NOSERIES</option>
			</field>

		</fieldset>
	</fields>
</metadata>