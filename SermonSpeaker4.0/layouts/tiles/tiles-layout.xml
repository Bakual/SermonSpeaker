<?xml version="1.0" encoding="UTF-8"?>
<extension type="file" version="1.6" method="upgrade">
	<!-- Start the name with 'SermonSpeaker: ' to have some standard -->
	<name>SermonSpeaker: Tiles-Layout</name>
	<author>Thomas Hunziker</author>
	<authorEmail>admin@sermonspeaker.net</authorEmail>
	<authorUrl>http://www.sermonspeaker.net</authorUrl>
	<creationDate>Juni 2012</creationDate>
	<copyright>(C) 2012</copyright>
	<version>1.2</version>
	<license>http://www.gnu.org/licenses/gpl.html</license>
	<description>Tiles Layout file for SermonSpeaker</description>
	<fileset>
		<!-- 'target' specifies the basefolder where the files will be copied to. -->
		<files target="components/com_sermonspeaker">
			<!-- Only use <filename> tags here, never <folder> -->
			<filename>views/categories/tmpl/tiles.php</filename>
			<filename>views/categories/tmpl/tiles.xml</filename>
			<filename>views/categories/tmpl/tiles_items.php</filename>
			<filename>views/sermons/tmpl/tiles.php</filename>
			<filename>views/sermons/tmpl/tiles.xml</filename>
			<filename>views/sermons/tmpl/tiles_children.php</filename>
			<filename>views/series/tmpl/tiles.php</filename>
			<filename>views/series/tmpl/tiles.xml</filename>
			<filename>views/series/tmpl/tiles_children.php</filename>
			<filename>views/serie/tmpl/tiles.php</filename>
			<filename>views/serie/tmpl/tiles.xml</filename>
			<filename>views/speakers/tmpl/tiles.php</filename>
			<filename>views/speakers/tmpl/tiles.xml</filename>
			<filename>views/speakers/tmpl/tiles_children.php</filename>
			<filename>views/speaker/tmpl/tiles-sermons.php</filename>
			<filename>views/speaker/tmpl/tiles-sermons.xml</filename>
			<filename>views/speaker/tmpl/tiles-series.php</filename>
			<filename>views/speaker/tmpl/tiles-series.xml</filename>
		</files>
		<files target="media/com_sermonspeaker">
			<filename>css/tiles.css</filename>
			<filename>images/category.png</filename>
		</files>
	</fileset>
</extension>