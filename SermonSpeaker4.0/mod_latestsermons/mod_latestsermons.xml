<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" version="1.6" client="site" method="upgrade">
	<name>Latest Sermons</name>
	<author>Martin Hess, Thomas Hunziker</author>
	<creationDate>August 2010</creationDate>
	<copyright>(C) 2010</copyright>
	<authorEmail>martin.zh@gmail.com</authorEmail>
	<authorUrl>http://joomlacode.org/gf/project/sermon_speaker/</authorUrl>
	<version>4.0.beta</version>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<description>MOD_LATESTSERMONS_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_latestsermons">mod_latestsermons.php</filename>
		<filename>mod_latestsermons.xml</filename>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>
	<updateservers>
		<server type="extension" priority="1" name="Extension Update Site">http://www.sermonspeaker.net/update/modules/mod_latestsermons</server>
	</updateservers>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" 
					default="" 
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" 
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="ls_count" type="text" 
					default="3" 
					label="MOD_LATESTSERMONS_PARAM_COUNT" 
					description="MOD_LATESTSERMONS_PARAM_COUNT_DESC" />
				<field name="ls_show_mouseover" type="radio" 
					default="1" 
					label="MOD_LATESTSERMONS_PARAM_SHOW_MOUSEOVER" 
					description="MOD_LATESTSERMONS_PARAM_SHOW_MOUSEOVER_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="ls_show_mo_speaker" type="radio" 
					default="1" 
					label="MOD_LATESTSERMONS_PARAM_SHOW_MO_SPEAKER" 
					description="MOD_LATESTSERMONS_PARAM_SHOW_MO_SPEAKER_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="ls_show_mo_series" type="radio" 
					default="1" 
					label="MOD_LATESTSERMONS_PARAM_SHOW_MO_SERIES" 
					description="MOD_LATESTSERMONS_PARAM_SHOW_MO_SERIES_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="ls_show_mo_date" type="radio" 
					default="1" 
					label="MOD_LATESTSERMONS_PARAM_SHOW_MO_DATE" 
					description="MOD_LATESTSERMONS_PARAM_SHOW_MO_DATE_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="ls_mo_date_format" type="list" 
					default="DATE_FORMAT_LC4" 
					label="MOD_LATESTSERMONS_PARAM_MO_DATE_FORMAT" 
					description="MOD_LATESTSERMONS_PARAM_MO_DATE_FORMAT_DESC">
					<option value="DATE_FORMAT_LC">DATE_FORMAT_LC</option>
					<option value="DATE_FORMAT_LC1">DATE_FORMAT_LC1</option>
					<option value="DATE_FORMAT_LC2">DATE_FORMAT_LC2</option>
					<option value="DATE_FORMAT_LC3">DATE_FORMAT_LC3</option>
					<option value="DATE_FORMAT_LC4">DATE_FORMAT_LC4</option>
				</field>
				<field name="ls_show_mo_link" type="radio" 
					default="0" 
					label="MOD_LATESTSERMONS_PARAM_SHOW_MO_LINK" 
					description="MOD_LATESTSERMONS_PARAM_SHOW_MO_LINK_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>