<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="plugin" group="search" method="upgrade">
	<name>Search - SermonSpeaker</name>
	<author>Thomas Hunziker, Phil Boucher</author>
	<creationDate>January 2011</creationDate>
	<copyright>(C) 2011</copyright>
	<authorEmail>admin@sermonspeaker.net</authorEmail>
	<authorUrl>http://www.sermonspeaker.net</authorUrl>
	<version>4.1</version>
	<license>http://www.gnu.org/licenses/gpl.html</license>
	<description>PLG_SEARCH_SERMONSPEAKER_XML_DESCRIPTION</description>
	<files>
		<filename plugin="sermonspeaker">sermonspeaker.php</filename>
		<folder>language</folder>
	</files>
	<updateservers>
		<server type="extension" priority="1" name="SermonSpeaker.net">http://www.sermonspeaker.net/update/plg_sermonspeaker_search.xml</server>
	</updateservers>
	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="search_limit" type="text"
					default="50"
					description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
					label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
					size="5"
				/>

				<field name="search_content" type="radio"
					default="1"
					description="JFIELD_PLG_SEARCH_ALL_DESC"
					label="JFIELD_PLG_SEARCH_ALL_LABEL"
				>
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>

				<field name="search_archived" type="radio"
					default="0"
					description="JFIELD_PLG_SEARCH_ARCHIVED_DESC"
					label="JFIELD_PLG_SEARCH_ARCHIVED_LABEL"
				>
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>

				<field name="sermons_speaker" type="radio"
					default="0"
					label="PLG_SEARCH_SERMONSPEAKER_SERMONS_SPEAKER_LABEL"
					description="PLG_SEARCH_SERMONSPEAKER_SERMONS_SPEAKER_DESC"
				>
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
