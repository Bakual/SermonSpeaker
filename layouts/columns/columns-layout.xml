<?xml version="1.0" encoding="UTF-8"?>
<extension type="file" version="3.4.0" method="upgrade">
	<!-- Start the name with 'SermonSpeaker: ' to have some standard -->
	<name>SermonSpeaker: Columns-Layout</name>
	<author>Thomas Hunziker</author>
	<authorEmail>admin@sermonspeaker.net</authorEmail>
	<authorUrl>http://www.sermonspeaker.net</authorUrl>
	<creationDate>2015-03-13</creationDate>
	<copyright>(C) 2015</copyright>
	<version>3.0</version>
	<license>http://www.gnu.org/licenses/gpl.html</license>
	<description>Columns Layout file for SermonSpeaker</description>
	<fileset>
		<!-- 'target' specifies the basefolder where the files will be copied to. -->
		<files target="components/com_sermonspeaker">
			<!-- Only use <filename> tags here, never <folder> -->
			<filename>views/sermons/tmpl/columns.php</filename>
			<filename>views/sermons/tmpl/columns.xml</filename>
			<filename>views/speaker/tmpl/columns.php</filename>
			<filename>views/speaker/tmpl/columns.xml</filename>
			<filename>views/serie/tmpl/columns.php</filename>
			<filename>views/serie/tmpl/columns.xml</filename>
		</files>
		<files target="media/com_sermonspeaker">
			<filename>css/columns.css</filename>
		</files>
	</fileset>
</extension>