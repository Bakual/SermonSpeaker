<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" version="4.0" method="upgrade">
	<name>com_sermonspeaker</name>
	<author>Thomas Hunziker</author>
	<creationDate>2017-04-29</creationDate>
	<copyright>Â© 2017</copyright>
	<authorEmail>admin@sermonspeaker.net</authorEmail>
	<authorUrl>http://www.sermonspeaker.net</authorUrl>
	<version>6.0.0</version>
	<license>http://www.gnu.org/licenses/gpl.html</license>
	<description>COM_SERMONSPEAKER_DESCRIPTION</description>
	<scriptfile>script.php</scriptfile>
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<files folder="site">
		<filename>router.php</filename>
		<filename>sermonspeaker.php</filename>
		<filename>controller.php</filename>
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>views</folder>
		<folder>models</folder>
		<folder>language</folder>
		<folder>media</folder>
		<folder>plugin</folder>
	</files>
	<media destination="com_sermonspeaker" folder="media">
		<folder>css</folder>
		<folder>js</folder>
		<folder>fonts</folder>
		<folder>icons</folder>
		<folder>logo</folder>
		<folder>images</folder>
	</media>
	<administration>
		<menu>COM_SERMONSPEAKER</menu>
		<submenu>
			<menu view="main">COM_SERMONSPEAKER_MENU_MAIN</menu>
			<menu view="series">COM_SERMONSPEAKER_MENU_SERIES</menu>
			<menu view="speakers">COM_SERMONSPEAKER_MENU_SPEAKERS</menu>
			<menu view="sermons">COM_SERMONSPEAKER_MENU_SERMONS</menu>
			<menu link="option=com_categories&amp;extension=com_sermonspeaker">COM_SERMONSPEAKER_MENU_CATEGORY</menu>
			<menu view="tools">COM_SERMONSPEAKER_MENU_TOOLS</menu>
			<menu view="languages">COM_SERMONSPEAKER_MENU_LANGUAGES</menu>
			<menu view="help">COM_SERMONSPEAKER_MENU_HELP</menu>
		</submenu>
		<files folder="admin">
			<filename>config.xml</filename>
			<filename>access.xml</filename>
			<filename>sermonspeaker.php</filename>
			<filename>sermonspeaker.css</filename>
			<filename>controller.php</filename>
			<folder>controllers</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>images</folder>
			<folder>helpers</folder>
			<folder>language</folder>
			<folder>views</folder>
			<folder>vendor</folder>
		</files>
	</administration>
	<tables>
		<table>#__sermon_sermons</table>
		<table>#__sermon_speakers</table>
		<table>#__sermon_series</table>
		<table>#__sermon_scriptures</table>
	</tables>
	<updateservers>
		<server type="extension" priority="1" name="SermonSpeaker.net">http://www.sermonspeaker.net/update/com_sermonspeaker.xml</server>
	</updateservers>
</extension>
