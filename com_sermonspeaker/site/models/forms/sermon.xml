<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="general">
		<field
			name="title"
			type="text"
			label="JGLOBAL_TITLE"
			onchange="check(this.value, 70, 0)"
			size="30"
			required="true"
		/>

		<field
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			hint="JFIELD_ALIAS_PLACEHOLDER"
			size="45"
		/>

		<field
			name="catid"
			type="categoryedit"
			label="JCATEGORY"
			extension="com_sermonspeaker.sermons"
			required="true"
			addfieldprefix="Joomla\Component\Categories\Administrator\Field"
		/>

		<field
			name="state"
			type="list"
			label="JSTATUS"
			class="form-select-color-state"
			size="1"
			default="1"
			validate="options"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASH</option>
		</field>

		<field
			name="podcast"
			type="list"
			label="COM_SERMONSPEAKER_FIELD_SERMONCAST_LABEL"
			description="COM_SERMONSPEAKER_FIELD_SERMONCAST_DESC"
			default="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field
			name="ordering"
			type="sermonordering"
			label="JFIELD_ORDERING_LABEL"
			table="sermon_sermons"
			field="title"
		/>

		<field
			name="audiofile"
			type="customfilelist"
			label="COM_SERMONSPEAKER_FIELD_AUDIOFILE_LABEL"
			description="COM_SERMONSPEAKER_FIELD_AUDIOFILE_DESC"
			file="audio"
			hide_default="true"
			hide_none="true"
			onchange="toggleElement('audiofile', 1);"
		/>

		<field
			name="videofile"
			type="customfilelist"
			label="COM_SERMONSPEAKER_FIELD_VIDEOFILE_LABEL"
			description="COM_SERMONSPEAKER_FIELD_VIDEOFILE_DESC"
			file="video"
			hide_default="true"
			hide_none="true"
		/>

		<field
			name="notes"
			type="editor"
			label="COM_SERMONSPEAKER_FIELD_NOTES_LABEL"
			buttons="true"
			hide="pagebreak,readmore"
			filter="ComponentHelper::filterText"
		/>

		<field
			name="addfile"
			type="customfilelist"
			label="COM_SERMONSPEAKER_FIELD_ADDFILE_LABEL"
			description="COM_SERMONSPEAKER_FIELD_ADDFILE_DESC"
			file="addfile"
			hide_default="true"
			hide_none="true"
		/>

		<field
			name="addfileDesc"
			type="text"
			label="COM_SERMONSPEAKER_FIELD_ADDFILEDESC_LABEL"
			description="COM_SERMONSPEAKER_FIELD_ADDFILEDESC_DESC"
			size="50"
		/>

		<field
			name="publish_up"
			type="calendar"
			label="JGLOBAL_FIELD_PUBLISH_UP_LABEL"
			translateformat="true"
			showtime="true"
			size="22"
			filter="user_utc"
		/>

		<field
			name="publish_down"
			type="calendar"
			label="JGLOBAL_FIELD_PUBLISH_DOWN_LABEL"
			translateformat="true"
			showtime="true"
			size="22"
			filter="user_utc"
		/>

		<field
			name="tags"
			type="tag"
			label="JTAG"
			multiple="true"
			size="45"
		/>

		<field
			name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
		>
			<option value="*">JALL</option>
		</field>
	</fieldset>

	<fieldset name="info"
		addfieldpath="/administrator/components/com_sermonspeaker/models/fields">
		<field
			name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			class="readonly"
			size="10"
			default="0"
			required="true"
			readonly="true"
		/>

		<field
			name="created"
			type="calendar"
			translateformat="true"
			filter="unset"
		/>

		<field
			name="created_by"
			type="text"
			filter="unset"
		/>

		<field
			name="hits"
			type="hits"
			class="readonly"
			label="JGLOBAL_HITS"
			filter="unset"
		/>

	</fieldset>

	<fieldset name="detail" label="COM_SERMONSPEAKER_DETAIL">
		<field
			name="sermon_number"
			type="text"
			label="COM_SERMONSPEAKER_FIELD_NUM_LABEL"
			size="5"
			default="0"
		/>

		<field
			name="sermon_date"
			type="calendar"
			label="COM_SERMONSPEAKER_FIELD_DATE_LABEL"
			onchange="changedate(this.value)"
			translateformat="true"
			showtime="true"
			size="22"
			filter="user_utc"
		/>

		<field
			name="sermon_time"
			type="text"
			class="inputbox"
			label="COM_SERMONSPEAKER_FIELD_LENGTH_LABEL"
			description="COM_SERMONSPEAKER_FIELD_LENGTH_DESC"
			size="10"
			default="00:00:00"
		/>

		<field
			name="scripture"
			type="scripture"
			label="COM_SERMONSPEAKER_FIELD_SCRIPTURE_LABEL"
			description="COM_SERMONSPEAKER_FIELD_SCRIPTURE_DESC"
			size="30"
			readonly="true"
		/>

		<field
			name="speaker_id"
			type="modal_speaker"
			label="COM_SERMONSPEAKER_SPEAKER"
			select="true"
			new="true"
			edit="true"
			clear="true"
		/>

		<field
			name="series_id"
			type="modal_serie"
			label="COM_SERMONSPEAKER_SERIE"
			select="true"
			new="true"
			edit="true"
			clear="true"
		/>

		<field
			name="picture"
			type="mediawrapper"
			label="COM_SERMONSPEAKER_FIELD_PICTURE_LABEL"
		/>

	</fieldset>

	<fieldset name="metadata" label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
		<field
			name="metakey"
			type="textarea"
			label="JFIELD_META_KEYWORDS_LABEL"
			rows="5"
			cols="50"
		/>

		<field
			name="metadesc"
			type="textarea"
			label="JFIELD_META_DESCRIPTION_LABEL"
			rows="5"
			cols="50"
			maxlength="160"
			charcounter="true"
		/>
	</fieldset>

	<fields name="metadata">
		<fieldset name="jmetadata" label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
			<field
				name="robots"
				type="hidden"
				label="JFIELD_METADATA_ROBOTS_LABEL"
				filter="unset"
			>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="index, follow"></option>
				<option value="noindex, follow"></option>
				<option value="index, nofollow"></option>
				<option value="noindex, nofollow"></option>
			</field>

			<field
				name="rights"
				type="hidden"
				label="JFIELD_META_RIGHTS_LABEL"
				filter="unset"
			/>
		</fieldset>
	</fields>
</form>
