<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<view title="COM_SERMONSPEAKER_SERMONS_VIEW_TITLE">
		<message><![CDATA[COM_SERMONSPEAKER_SERMONS_VIEW_DESC]]></message>
		<options>
			<default
				name="COM_SERMONSPEAKER_SERMONS_VIEW_TITLE"
				msg="COM_SERMONSPEAKER_SERMONS_VIEW_DESC"
			/>
		</options>
	</view>
	<fields name="params" addfieldprefix="Sermonspeaker\Component\Sermonspeaker\Administrator\Field">
		<fieldset name="basic">
			<field
				name="catid"
				type="category"
				label="JGLOBAL_CHOOSE_CATEGORY_LABEL"
				description="JGLOBAL_CHOOSE_CATEGORY_DESC"
				extension="com_sermonspeaker.sermons"
				required="true"
			/>
			<field
				name="maxLevel"
				type="list"
				label="JGLOBAL_MAXIMUM_CATEGORY_LEVELS_LABEL"
				description="JGLOBAL_MAXIMUM_CATEGORY_LEVELS_DESC"
				useglobal="true"
			>
				<option value="0">JNONE</option>
				<option value="-1">JALL</option>
				<option value="1">J1</option>
				<option value="2">J2</option>
				<option value="3">J3</option>
				<option value="4">J4</option>
				<option value="5">J5</option>
			</field>

			<field
				name="default_order"
				type="list"
				label="COM_SERMONSPEAKER_PARAM_DEFAULT_ORDER_LABEL"
				description="COM_SERMONSPEAKER_PARAM_DEFAULT_ORDER_DESC"
				useglobal="true"
			>
				<option value="ordering">COM_SERMONSPEAKER_PARAM_DEFAULT_ORDER_OPTION_ORDERING</option>
				<option value="sermon_date">COM_SERMONSPEAKER_PARAM_DEFAULT_ORDER_OPTION_DATE</option>
				<option value="publish_up">COM_SERMONSPEAKER_PARAM_DEFAULT_ORDER_OPTION_PUBLISHING_DATE</option>
				<option value="title">COM_SERMONSPEAKER_PARAM_DEFAULT_ORDER_OPTION_TITLE</option>
			</field>

			<field
				name="default_order_dir"
				type="list"
				label="COM_SERMONSPEAKER_PARAM_DEFAULT_ORDER_DIR_LABEL"
				description="COM_SERMONSPEAKER_PARAM_DEFAULT_ORDER_DIR_DESC"
				useglobal="true"
			>
				<option value="ASC">COM_SERMONSPEAKER_PARAM_DEFAULT_ORDER_DIR_OPTION_ASC</option>
				<option value="DESC">COM_SERMONSPEAKER_PARAM_DEFAULT_ORDER_DIR_OPTION_DESC</option>
			</field>

			<field
				name="filter_field"
				type="list"
				label="JGLOBAL_FILTER_FIELD_LABEL"
				description="COM_SERMONSPEAKER_FILTER_FIELD_DESC"
				useglobal="true"
			>
				<option value="1">JSHOW</option>
				<option value="0">JHIDE</option>
			</field>

			<field
				name="default_pagination_limit"
				type="limitbox"
				label="COM_SERMONSPEAKER_FIELD_DEFAULT_PAGINATION_LIMIT_LABEL"
				description="COM_SERMONSPEAKER_FIELD_DEFAULT_PAGINATION_LIMIT_DESC"
				useglobal="true"
			/>

			<field
				name="limit"
				type="text"
				label="COM_SERMONSPEAKER_PARAM_LIMIT_LABEL"
				description="COM_SERMONSPEAKER_PARAM_LIMIT_DESC"
				default=""
				size="2"
			/>
		</fieldset>
		<fieldset
			name="advanced"
			addfieldpath="/administrator/components/com_sermonspeaker/models/fields"
		>
			<field
				name="plugin_tag"
				type="plugintag"
				class="btn-group"
				label="COM_SERMONSPEAKER_PARAM_PLUGIN_LABEL"
				description="COM_SERMONSPEAKER_PARAM_PLUGIN_DESC"
				useglobal="true"
			/>
			<field
				name="filetype"
				type="list"
				label="COM_SERMONSPEAKER_FIELD_FILETYPE_LABEL"
				description="COM_SERMONSPEAKER_FIELD_FILETYPE_DESC"
			>
				<option value="">COM_SERMONSPEAKER_NO_FILTER</option>
				<option value="audio">COM_SERMONSPEAKER_AUDIO</option>
				<option value="video">COM_SERMONSPEAKER_VIDEO</option>
			</field>
			<field
				name="fileprio"
				type="list"
				label="COM_SERMONSPEAKER_PARAM_FILEPRIO_LABEL"
				description="COM_SERMONSPEAKER_PARAM_FILEPRIO_DESC">
				useglobal="true"
				>
				<option value="0">COM_SERMONSPEAKER_AUDIO</option>
				<option value="1">COM_SERMONSPEAKER_VIDEO</option>
			</field>
			<field
				name="year"
				type="sql"
				label="COM_SERMONSPEAKER_FIELD_YEAR_LABEL"
				description="COM_SERMONSPEAKER_FIELD_YEAR_DESC"
				query="SELECT DISTINCT YEAR(`sermon_date`) AS `year` FROM `#__sermon_sermons` WHERE `sermon_date` != '0000-00-00' ORDER BY `sermon_date` DESC"
				key_field="year"
				value_field="year"
			>
				<option value="">COM_SERMONSPEAKER_NO_FILTER</option>
			</field>
			<field
				name="month"
				type="list"
				label="COM_SERMONSPEAKER_FIELD_MONTH_LABEL"
				description="COM_SERMONSPEAKER_FIELD_MONTH_DESC"
			>
				<option value="">COM_SERMONSPEAKER_NO_FILTER</option>
				<option value="1">JANUARY</option>
				<option value="2">FEBRUARY</option>
				<option value="3">MARCH</option>
				<option value="4">APRIL</option>
				<option value="5">MAY</option>
				<option value="6">JUNE</option>
				<option value="7">JULY</option>
				<option value="8">AUGUST</option>
				<option value="9">SEPTEMBER</option>
				<option value="10">OCTOBER</option>
				<option value="11">NOVEMBER</option>
				<option value="12">DECEMBER</option>
			</field>
		</fieldset>
		<fieldset
			name="layout"
			label="COM_SERMONSPEAKER_FIELDSET_LAYOUTS_LABEL"
			description="COM_SERMONSPEAKER_FIELDSET_LAYOUTS_DESC"
		>
			<field
				name="sermonslayout"
				type="componentlayout"
				label="COM_SERMONSPEAKER_SERMONS_VIEW_TITLE"
				class="form-select"
				useglobal="true"
				extension="com_sermonspeaker"
				view="sermons"
			/>
			<field
				name="sermonlayout"
				type="componentlayout"
				label="COM_SERMONSPEAKER_SERMON_VIEW_TITLE"
				class="form-select"
				useglobal="true"
				extension="com_sermonspeaker"
				view="sermon"
			/>
			<field
				name="serieslayout"
				type="componentlayout"
				label="COM_SERMONSPEAKER_SERIES_VIEW_TITLE"
				class="form-select"
				useglobal="true"
				extension="com_sermonspeaker"
				view="series"
			/>
			<field
				name="serielayout"
				type="componentlayout"
				label="COM_SERMONSPEAKER_SERIE_VIEW_TITLE"
				class="form-select"
				useglobal="true"
				extension="com_sermonspeaker"
				view="serie"
			/>
			<field
				name="speakerslayout"
				type="componentlayout"
				label="COM_SERMONSPEAKER_SPEAKERS_VIEW_TITLE"
				class="form-select"
				useglobal="true"
				extension="com_sermonspeaker"
				view="speakers"
			/>
			<field
				name="speakerlayout"
				type="componentlayout"
				label="COM_SERMONSPEAKER_SPEAKER_VIEW_TITLE"
				class="form-select"
				useglobal="true"
				extension="com_sermonspeaker"
				view="speaker"
			/>
			<field
				name="categorieslayout"
				type="componentlayout"
				label="COM_SERMONSPEAKER_CATEGORIES_VIEW_TITLE"
				class="form-select"
				useglobal="true"
				extension="com_sermonspeaker"
				view="categories"
			/>
		</fieldset>
	</fields>
</metadata>
