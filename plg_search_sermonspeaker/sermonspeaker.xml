<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="4.0.0" group="search" method="upgrade">
	<name>PLG_SEARCH_SERMONSPEAKER</name>
	<author>Thomas Hunziker</author>
	<creationDate>2025-11-21</creationDate>
	<copyright>Â© 2025</copyright>
	<authorEmail>admin@sermonspeaker.net</authorEmail>
	<authorUrl>http://www.sermonspeaker.net</authorUrl>
	<version>7.0.0</version>
	<license>http://www.gnu.org/licenses/gpl.html</license>
	<description>PLG_SEARCH_SERMONSPEAKER_XML_DESCRIPTION</description>
	<namespace path="/">Sermonspeaker\Plugin\Search\Sermonspeaker</namespace>
	<files>
		<folder>Extension</folder>
		<folder>language</folder>
		<folder plugin="sermonspeaker">services</folder>
	</files>
	<updateservers>
		<server type="extension" priority="1" name="SermonSpeaker.net">https://www.sermonspeaker.net/update/plg_sermonspeaker_search.xml</server>
	</updateservers>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="search_limit" type="text"
					default="50"
					description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
					label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
					size="5"
				/>
				<field name="search_content" type="radio"
					label="JFIELD_PLG_SEARCH_ALL_LABEL"
					description="JFIELD_PLG_SEARCH_ALL_DESC"
					layout="joomla.form.field.radio.switcher"
					default="1"
				>
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="search_archived" type="radio"
					label="JFIELD_PLG_SEARCH_ARCHIVED_LABEL"
					description="JFIELD_PLG_SEARCH_ARCHIVED_DESC"
					layout="joomla.form.field.radio.switcher"
					default="0"
				>
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="search_series" type="radio"
					label="PLG_SEARCH_SERMONSPEAKER_SEARCH_SERIES_LABEL"
					description="PLG_SEARCH_SERMONSPEAKER_SEARCH_SERIES_DESC"
					layout="joomla.form.field.radio.switcher"
					default="1"
				>
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="search_speakers" type="radio"
					label="PLG_SEARCH_SERMONSPEAKER_SEARCH_SPEAKERS_LABEL"
					description="PLG_SEARCH_SERMONSPEAKER_SEARCH_SPEAKERS_DESC"
					layout="joomla.form.field.radio.switcher"
					default="1"
				>
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
				<field name="sermons_speaker" type="radio"
					label="PLG_SEARCH_SERMONSPEAKER_SERMONS_SPEAKER_LABEL"
					description="PLG_SEARCH_SERMONSPEAKER_SERMONS_SPEAKER_DESC"
					layout="joomla.form.field.radio.switcher"
					default="0"
				>
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
