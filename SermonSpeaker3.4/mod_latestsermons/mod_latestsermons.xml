<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="upgrade">
	<name>Latest Sermons</name>
	<author>Martin Hess</author>
	<creationDate>Mai 2010</creationDate>
	<copyright>(C) 2010</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>martin.zh@gmail.com</authorEmail>
	<authorUrl>http://joomlacode.org/gf/project/sermon_speaker/</authorUrl>
	<version>3.4</version>
	<description>This module provides an short overview over the latest sermons.</description>
	<files>
		<filename module="mod_latestsermons">mod_latestsermons.php</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB.mod_latestsermons.ini</language>
		<language tag="de-DE">de-DE.mod_latestsermons.ini</language>
	</languages>
	<params>
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="ls_count" type="text" default="3" label="MOD_LATESTSERMONS_PARAM_COUNT" description="MOD_LATESTSERMONS_PARAM_COUNT_DESC" />
		<param name="ls_show_mouseover" type="radio" default="1" label="MOD_LATESTSERMONS_PARAM_SHOW_MOUSEOVER" description="MOD_LATESTSERMONS_PARAM_SHOW_MOUSEOVER_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="ls_show_mo_speaker" type="radio" default="1" label="MOD_LATESTSERMONS_PARAM_SHOW_MO_SPEAKER" description="MOD_LATESTSERMONS_PARAM_SHOW_MO_SPEAKER_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="ls_show_mo_series" type="radio" default="1" label="MOD_LATESTSERMONS_PARAM_SHOW_MO_SERIES" description="MOD_LATESTSERMONS_PARAM_SHOW_MO_SERIES_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="ls_show_mo_date" type="radio" default="1" label="MOD_LATESTSERMONS_PARAM_SHOW_MO_DATE" description="MOD_LATESTSERMONS_PARAM_SHOW_MO_DATE_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="ls_mo_date_format" type="text" default="" label="MOD_LATESTSERMONS_PARAM_MO_DATE_FORMAT" description="MOD_LATESTSERMONS_PARAM_MO_DATE_FORMAT_DESC" />
	</params>
</install>
