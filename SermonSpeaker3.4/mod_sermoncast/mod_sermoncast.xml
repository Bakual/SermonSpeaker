<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="upgrade">
	<name>Sermoncast</name>
	<author>Thomas Hunziker, Martin Hess</author>
	<creationDate>January 2011</creationDate>
	<copyright>(C) 2011</copyright>
	<authorEmail>admin@sermonspeaker.net</authorEmail>
	<authorUrl>http://www.sermonspeaker.net</authorUrl>
	<version>3.4.3</version>
	<license>http://www.gnu.org/licenses/gpl.html</license>
	<description>This module provides podcasting functionality for SermonSpeaker 3.4.2. It is based on the mod_podcast module from Joseph LeBlanc.</description>
	<files>
		<filename module="mod_sermoncast">mod_sermoncast.php</filename>
		<filename>podcast-mini.gif</filename>
		<filename>feed_rss.gif</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB.mod_sermoncast.ini</language>
		<language tag="de-DE">de-DE.mod_sermoncast.ini</language>
		<language tag="nl-NL">nl-NL.mod_sermoncast.ini</language>
	</languages>
	<params addpath="/administrator/components/com_content/elements">
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="sc_introtext" type="text" default="" label="MOD_SERMONCAST_PARAM_INTROTEXT" description="MOD_SERMONCAST_PARAM_INTROTEXT_DESC" />
		<param type="spacer" />
		<param name="sc_series_cat" type="category" section="com_sermonspeaker" label="MOD_SERMONCAST_PARAM_SERIES_CATEGORY" description="MOD_SERMONCAST_PARAM_CATEGORY_DESC" />
		<param name="sc_speaker_cat" type="category" section="com_sermonspeaker" label="MOD_SERMONCAST_PARAM_SPEAKER_CATEGORY" description="MOD_SERMONCAST_PARAM_CATEGORY_DESC" />
		<param name="sc_sermon_cat" type="category" section="com_sermonspeaker" label="MOD_SERMONCAST_PARAM_SERMON_CATEGORY" description="MOD_SERMONCAST_PARAM_CATEGORY_DESC" />
		<param name="sc_menuitem" type="menuitem" label="MOD_SERMONCAST_PARAM_MENUITEM" description="MOD_SERMONCAST_PARAM_MENUITEM_DESC" />
		<param type="spacer" />
		<param name="sc_showpcast" type="radio" default="1" label="MOD_SERMONCAST_PARAM_SHOWPCAST" description="MOD_SERMONCAST_PARAM_SHOWPCAST_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="sc_pcast_prefix" type="list" default="itpc" label="MOD_SERMONCAST_PARAM_PCAST_PREFIX" description="MOD_SERMONCAST_PARAM_PCAST_PREFIX_DESC">
			<option value="http">http://</option>
			<option value="itpc">itpc://</option>
			<option value="pcast">pcast://</option>
		</param>
		<param name="sc_otherlink" type="text" default="" label="MOD_SERMONCAST_PARAM_OTHERLINK" description="MOD_SERMONCAST_PARAM_OTHERLINK_DESC" />
		<param name="sc_otherimage" type="text" default="" label="MOD_SERMONCAST_PARAM_OTHERIMAGE" description="MOD_SERMONCAST_PARAM_OTHERIMAGE_DESC" />
		<param type="spacer" />
		<param name="sc_showplink" type="radio" default="1" label="MOD_SERMONCAST_PARAM_SHOWPLINK" description="MOD_SERMONCAST_PARAM_SHOWPLINK_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param type="spacer" />
		<param name="sc_showhelp" type="radio" default="0" label="MOD_SERMONCAST_PARAM_SHOWHELP" description="MOD_SERMONCAST_PARAM_SHOWHELP_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="sc_helpwidth" type="text" default="700" label="MOD_SERMONCAST_PARAM_HELPWIDTH" description="MOD_SERMONCAST_PARAM_HELPWIDTH_DESC" />
		<param name="sc_helpheight" type="text" default="500" label="MOD_SERMONCAST_PARAM_HELPHEIGHT" description="MOD_SERMONCAST_PARAM_HELPHEIGHT_DESC" />
		<param name="sc_helpcontent" type="article" default="0" label="MOD_SERMONCAST_PARAM_HELPCONTENT" description="MOD_SERMONCAST_PARAM_HELPCONTENT_DESC" />
	</params>
</install>
