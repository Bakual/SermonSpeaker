<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="upgrade">
	<name>SermonArchive</name>
	<author>Thomas Hunziker, Rajesh K</author>
	<creationDate>January 2011</creationDate>
	<copyright>(C) 2011</copyright>
	<authorEmail>admin@sermonspeaker.net</authorEmail>
	<authorUrl>http://www.sermonspeaker.net</authorUrl>
	<version>3.4.3</version>
	<license>http://www.gnu.org/licenses/gpl.html</license>
	<description>This module is designed for SermonSpeaker 3.4 that shows a list of the calendar months (or years), which contain Sermons of each month (or year).</description>
	<files>
		<filename module="mod_sermonarchive">mod_sermonarchive.php</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB.mod_sermonarchive.ini</language>
		<language tag="de-DE">de-DE.mod_sermonarchive.ini</language>
		<language tag="nl-NL">nl-NL.mod_sermonarchive.ini</language>
	</languages>

	<params>
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="archive_count" type="text" default="" label="MOD_SERMONARCHIVE_PARAM_COUNT" description="MOD_SERMONARCHIVE_PARAM_COUNT_DESC" />
		<param name="archive_switch" type="list" default="month" label="MOD_SERMONARCHIVE_PARAM_SWITCH" description="MOD_SERMONARCHIVE_PARAM_SWITCH_DESC">
			<option value="month">MOD_SERMONARCHIVE_PARAM_MONTH</option>
			<option value="year">MOD_SERMONARCHIVE_PARAM_YEAR</option>
		</param>
		<param name="menuitem" type="menuitem" 
			default=""
			label="MOD_SERMONARCHIVE_PARAM_MENUITEM" 
			description="MOD_SERMONARCHIVE_PARAM_MENUITEM_DESC" 
			state="1"
		/>
	</params>
</install>
