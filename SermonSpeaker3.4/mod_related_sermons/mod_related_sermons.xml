<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="upgrade">
	<name>Related Sermons</name>
	<author>Thomas Hunziker</author>
	<creationDate>August 2010</creationDate>
	<copyright>Copyright (C) 2010. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>bakual@bakual.ch</authorEmail>
	<authorUrl>http://joomlacode.org/gf/project/sermon_speaker/</authorUrl>
	<version>3.4.2</version>
	<description>Module to show related sermons</description>
	<files>
		<filename module="mod_related_sermons">mod_related_sermons.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB.mod_related_sermons.ini</language>
		<language tag="de-DE">de-DE.mod_related_sermons.ini</language>
		<language tag="nl-NL">nl-NL.mod_related_sermons.ini</language>
	</languages>
	<params>
		<param name="showDate" type="radio" default="0" label="MOD_RELATED_SERMONS_PARAM_SHOWDATE" description="MOD_RELATED_SERMONS_PARAM_SHOWDATE_DESC">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="supportArticles" type="radio" default="0" label="MOD_RELATED_SERMONS_PARAM_SUPPORT_ARTICLES" description="MOD_RELATED_SERMONS_PARAM_SUPPORT_ARTICLES_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
	</params>
	<params group="advanced">
		<param name="cache_items" type="list" default="0" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
	</params>
</install>
